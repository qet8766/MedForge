DOMAIN=example.com
ACME_EMAIL=admin@example.com
CF_API_TOKEN=

DB_ROOT_PASSWORD=
DB_USER=medforge
DB_PASSWORD=

SESSION_SECRET=
# Cookie/auth session policy.
AUTH_IDLE_TTL_SECONDS=604800
AUTH_MAX_TTL_SECONDS=2592000
COOKIE_NAME=medforge_session
COOKIE_DOMAIN=.medforge.example.com
COOKIE_SECURE=true
COOKIE_SAMESITE=lax
# Session runtime/recovery controls (Phase 3/4).
PUBLIC_SESSIONS_NETWORK=medforge-public-sessions
WORKSPACE_ZFS_ROOT=tank/medforge/workspaces
SESSION_ALLOCATION_MAX_RETRIES=3
SESSION_CONTAINER_START_TIMEOUT_SECONDS=30
SESSION_CONTAINER_STOP_TIMEOUT_SECONDS=30
# Optional integer (GB). Leave empty to disable quota enforcement.
SESSION_WORKSPACE_QUOTA_GB=
# Use `docker` in real environments, `mock` for local/test without Docker+ZFS.
SESSION_RUNTIME_MODE=docker
# Optional: run ZFS/chown shell commands through `sudo -n` from API runtime.
# Helpful for local host validation when API is not root.
SESSION_RUNTIME_USE_SUDO=false
SESSION_RECOVERY_ENABLED=true
SESSION_POLL_INTERVAL_SECONDS=30
# Container resource limits for session containers.
SESSION_CPU_SHARES=1024
SESSION_CPU_LIMIT=
SESSION_MEM_LIMIT=64g
SESSION_MEM_RESERVATION=8g
SESSION_SHM_SIZE=4g
SESSION_PIDS_LIMIT=
# Exponential backoff cap (seconds) for poll-loop failures.
SESSION_POLL_BACKOFF_MAX_SECONDS=300
# Default true for alpha UX so submissions return scored responses immediately.
AUTO_SCORE_ON_SUBMIT=true
# Root directory for competition holdout labels and manifests (relative to API root).
COMPETITIONS_DATA_DIR=data/competitions
# Root directory for full mirrored datasets.
# In-repo default for local dev: ../../datasets
# Typical host mirror path: /data/medforge/datasets
MEDFORGE_DATASETS_ROOT=/data/medforge/datasets
# Root directory for user submission uploads (relative to API root).
SUBMISSIONS_DIR=data/submissions
# Max submission upload size in bytes (default 10 MiB).
SUBMISSION_UPLOAD_MAX_BYTES=10485760

# Pack image reference (digest-pinned).
# Example: medforge-pack-default@sha256:<image_digest>
PACK_IMAGE=medforge-pack-default@sha256:replace_with_real_digest
